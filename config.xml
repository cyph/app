<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cyph.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>Cyph</name>
	<description>
		Completely private voice and video chat.
	</description>
	<author email="hello@cyph.com" href="https://www.cyph.com">
		Cyph, Inc.
	</author>

	<content src="index.html" />

	<plugin name="cordova-plugin-battery-status" spec="*" />
	<plugin name="cordova-plugin-camera" spec="*" />
	<plugin name="cordova-plugin-media-capture" spec="*" />
	<plugin name="cordova-plugin-device" spec="*" />
	<plugin name="cordova-plugin-dialogs" spec="*" />
	<plugin name="cordova-plugin-file" spec="*" />
	<plugin name="cordova-plugin-geolocation" spec="*" />
	<plugin name="cordova-plugin-globalization" spec="*" />
	<plugin name="cordova-plugin-inappbrowser" spec="*" />
	<plugin name="cordova-plugin-network-information" spec="*" />
	<plugin name="cordova-plugin-vibration" spec="*" />
	<plugin name="cordova-plugin-whitelist" spec="*" />

	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />

	<platform name="android">
		<preference name="OverrideUserAgent" value="Mozilla/5.0 (Linux; Android 7.1; Pixel XL Build/NDE63H) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/55.0.2883.91 Mobile Safari/537.36" />
		<allow-intent href="market:*" />
	</platform>
	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
	</platform>

	<engine name="android" spec="*" />
	<engine name="ios" spec="*" />
</widget>
